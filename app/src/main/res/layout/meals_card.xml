<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mealCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title of the meal -->
        <TextView
            android:id="@+id/mealTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text=" Meal name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Description of the meal -->
        <TextView
            android:id="@+id/val1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=" values - example: 248 kcals - 100gr"
            android:textColor="#7F7F7F" />

        <!-- Image and ingredients -->
        <LinearLayout
            android:id="@+id/ingAndimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ing1"
                android:layout_width="259dp"
                android:layout_height="87dp"
                android:layout_marginTop="6dp"
                android:text=" Ingredient 1 \n Eng2 \n Eng3 \....."
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:src="@drawable/meal1" />
        </LinearLayout>

        <!-- Meal values -->
        <LinearLayout
            android:id="@+id/meal_values"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <!-- Example values -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/protin" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="6dp"
                    android:text=" 12 gr\nProtein" />
            </LinearLayout>

            <!-- Carbs -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/carbs" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="6dp"
                    android:text=" 42 gr\nCarbs" />
            </LinearLayout>

            <!-- Fats -->
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/fats" />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="6dp"
                    android:text=" 22 gr\nFats" />
            </LinearLayout>
        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#D9CEED"
            android:drawableStart="@drawable/recipe_icon"
            android:elevation="8dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="Recipe"
            android:textColor="@color/primaryPurple"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:icon="@drawable/recipe_icon"
            app:iconGravity="textStart"
            app:iconPadding="10dp" />

        <LinearLayout
            android:id="@+id/hiddenview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Recipe of Meal" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
