    <LinearLayout android:layout_width="244dp" android:layout_height="88dp" android:layout_gravity="center_horizontal" android:layout_marginBottom="16dp" android:orientation="horizontal">
        <!--  ImageView for the activity image  -->
        <!--  TextView for the activity name  -->
        <TextView android:id="@+id/locationTextView" android:layout_width="match_parent" android:layout_height="match_parent" android:textColor="#000000" android:textSize="22sp" android:gravity="center"/>
    </LinearLayout>
    <EditText android:id="@+id/Discribtion" android:layout_width="384dp" android:layout_height="90dp" android:hint="Discribtion"/>
    <EditText android:id="@+id/editTextLimitMembersNumber" android:layout_width="384dp" android:layout_height="88dp" android:hint="Limit Members Number" android:inputType="number"/>
    <TextView android:id="@+id/chooseDateTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Choose the date:" android:textSize="16sp" android:textColor="#000000" android:layout_marginBottom="8dp"/>
    <DatePicker android:id="@+id/datePicker" android:layout_width="383dp" android:layout_height="111dp" android:calendarViewShown="false" android:datePickerMode="spinner" android:hint="Enter birth date" android:inputType="date"/>
    <TextView android:id="@+id/chooseStartTimeTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Choose the start time:" android:textSize="16sp" android:textColor="#000000" android:layout_marginBottom="8dp"/>
    <TimePicker android:id="@+id/starttimePicker" android:layout_width="385dp" android:layout_height="118dp" android:timePickerMode="spinner"/>
    <TextView android:id="@+id/chooseEndTimeTextView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:text="Choose the end time:" android:textColor="#000000" android:textSize="16sp"/>
    <TimePicker android:id="@+id/endtimePicker" android:layout_width="385dp" android:layout_height="118dp" android:timePickerMode="spinner"/>
    <Button android:id="@+id/buttonAdd" android:layout_width="match_parent" android:layout_height="wrap_content" android:backgroundTint="#8175F0" android:text="Add Group"/>
</LinearLayout>